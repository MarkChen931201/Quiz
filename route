from fastapi import FastAPI
from fastapi.responses import HTMLResponse

app = FastAPI()

@app.get("/", response_class=HTMLResponse)
def read_root():
    html_content = """
    <html>
        <head>
            <title>Hello FastAPI</title>
        </head>
        <body>
            <h1>Hello, this is a HTML page!</h1>
            <p>Generated by FastAPI route ðŸš€</p>
        </body>
    </html>
    """
    return html_content
